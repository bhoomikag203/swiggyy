<% provide(:title, "#{@meal.name.capitalize}") %>
<div class="devise_form">
	<h2 align="center">Update meal</h2>
  	<div class="row">
  		<div class="col-md-6 col-md-offset-3">
			<%= form_for(@meal, url: restaurant_meals_path(@restaurant, @meal)) do |f| %>

				<div class="form-group">
				    <%= f.label :name %>
				    <%= f.text_field :name, class:"form-control" %>
				</div>

				<div class="form-group">
				    <%= f.label :price %>
				    <%= f.text_field :price, class:"form-control" %>
				</div>

				<div class="form-group">
			        <%= f.label :Category %>
			        <%= f.select(:category, options_for_select([['Veg'], ['Non Veg'], ['North Indian'], ['South Indian'], ['Deserts']]), {}, {class: "form-control"}) %>
	   			</div>

				<div class="form-group">
				    <%= f.label :image %>
				    <%= f.file_field :image, class:"form-control" %>
				</div>

				<div class="form-group">
				    <%= link_to 'Back', restaurants_path, class:"btn btn-primary" %>
				    <%= f.submit class:"btn btn-success" %>
				</div>

			<% end %>
		</div>
	</div>
</div>
